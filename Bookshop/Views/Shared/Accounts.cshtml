@model IQueryable<Account>
@foreach (Account item in Model)
{
    #pragma warning disable 8604
    string RoleName = item.Role == null ? "None" : item.Role.Name;
    <div class="card-body">
        <div class="info">
            <img src = "@item.Avatar.ToImg()" alt=""/>
            <div>
                <h3>@item.Username</h3>
                <h4>@RoleName</h4>
            </div>
        </div>
        @if (item.Username != "Admin") {
            <div class="button">
                <i><img src="/images/VerticalDots.svg" alt=""></i>
                    <button class="b1"><a asp-page="/EditAccount" asp-route-id="@item.Id">Edit</a></button>
                    <button class="b2"><a asp-page="/RemoveAccount" asp-route-id="@item.Id">Remove</a></button>
            </div>
        }
    </div>
}